<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:p4="http://xamarin.com/mono/android/designer"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout1">
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:paddingHorizontal="4dp">
        <TableLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/tableLayout1">
            <TableRow
                android:id="@+id/tableRow1"
                android:layout_height="30px"
                android:gravity="center_horizontal"
                android:layout_width="match_parent">
                <TextView
                    android:text="City Name"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_column="0"
                    android:id="@+id/textView10"
                    android:layout_marginRight="8dp"
                    android:layout_weight="0.3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="State"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_column="1"
                    android:id="@+id/textView11"
                    android:layout_marginRight="8dp"
                    android:layout_weight="0.3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="Country"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_column="2"
                    android:id="@+id/textView12"
                    android:layout_weight="0.3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow
                android:id="@+id/tableRow2"
                android:layout_height="70px"
                android:gravity="center|center_horizontal"
                android:layout_width="match_parent">
                <EditText
                    android:layout_column="0"
                    android:id="@+id/editCity"
                    android:layout_weight="0.3"
                    android:layout_height="60dp"
                    android:inputType="text"
                    android:layout_width="match_parent" />
                <EditText
                    android:layout_column="1"
                    android:id="@+id/editState"
                    android:layout_weight="0.3"
                    android:layout_height="60dp"
                    android:inputType="text"
                    android:layout_width="match_parent" />
                <EditText
                    android:layout_column="2"
                    android:id="@+id/editCountry"
                    android:layout_weight="0.3"
                    android:layout_height="60dp"
                    android:inputType="text"
                    android:layout_width="match_parent" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="4dp"
        android:orientation="vertical"
        android:id="@+id/locationLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/locationPlace"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Place: "
                android:id="@+id/locP"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/locPlace"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/locationGeoloc"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Geolocation: "
                android:id="@+id/locGeo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/locGeoplace"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout7"
        android:gravity="center_horizontal">
        <Button
            android:text="Get Weather"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnWeather" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="46.0dp"
        android:id="@+id/linearLayout3"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
        <Button
            android:text="Reset Location"
            android:layout_width="170.5dp"
            android:layout_height="match_parent"
            android:id="@+id/btnReset"
            android:paddingHorizontal="12dp" />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/space1"
            android:layout_marginRight="8dp"
            android:paddingHorizontal="8dp" />
        <Button
            android:text="Reset Data"
            android:layout_width="160.5dp"
            android:layout_height="match_parent"
            android:id="@+id/btnResetData" />
    </LinearLayout>
    <CheckBox
        android:text="Use current location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chkLocation"
        android:checked="false"
        android:layout_gravity="center_horizontal"
        android:foregroundGravity="center_horizontal"
        android:gravity="center_horizontal|center" />
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout5"
        android:gravity="center_horizontal">
        <CheckBox
            android:text="Save location"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/checkBox1" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4"
        android:gravity="center_horizontal"
        tools:visibility="fakse"
        android:layout_marginBottom="8dp">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/progressBar1"
            android:layout_gravity="center_horizontal|fill" />
    </LinearLayout>
</LinearLayout>
